<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_register_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/tv_priority"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="UserName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tv_register_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_username"
            android:text="Last Name" />
        <TextView
            android:id="@+id/tv_register_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_lastname"
            android:text="First Name" />
        <TextView
            android:id="@+id/tv_register_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_firstname"
            android:text="Delegation Role" />
        <TextView
            android:id="@+id/tv_register_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_role"
            android:text="Age" />
        <TextView
            android:id="@+id/tv_register_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_age"
            android:text="Gender" />
        <TextView
            android:id="@+id/tv_register_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_gender"
            android:text="City" />
        <TextView
            android:id="@+id/tv_register_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_city"
            android:text="Country" />
        <TextView
            android:id="@+id/tv_register_zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_country"
            android:text="ZipCode" />
        <TextView
            android:id="@+id/tv_register_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_zipcode"
            android:text="Weight" />
        <TextView
            android:id="@+id/tv_register_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_weight"
            android:text="Experience" />
        <TextView
            android:id="@+id/tv_register_clubID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_experience"
            android:text="Club ID" />
        <TextView
            android:id="@+id/tv_register_instructorLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_clubID"
            android:text="Instructor Last Name" />
        <TextView
            android:id="@+id/tv_register_registerPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register_instructorLastName"
            android:text="Register Pic" />

    </RelativeLayout>


</android.support.v7.widget.CardView>